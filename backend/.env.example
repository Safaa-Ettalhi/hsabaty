# Configuration du serveur
PORT=3000
NODE_ENV=development

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/hssabaty

# Redis (pour les sessions)
REDIS_URL=redis://localhost:6379

# Session Secret
SESSION_SECRET=votre_secret_session_tres_securise_changez_moi

# JWT Secret
JWT_SECRET=
JWT_EXPIRE=7d

# API OpenAI
OPENAI_API_KEY=

# API Anthropic Claude (alternative)
ANTHROPIC_API_KEY=votre_cle_api_anthropic

# API Google Gemini (gratuit: quota ~250 req/jour, clé sur https://aistudio.google.com)
GEMINI_API_KEY=

# OpenRouter (pour fallback Nemotron 3 Nano 30B A3B gratuit si crédit Gemini épuisé)
OPENROUTER_API_KEY=
OPENROUTER_FALLBACK=true
OPENROUTER_HTTP_REFERER=https://hssabaty.ma

# Configuration de l'agent IA: openai | claude | gemini
IA_PROVIDER=gemini
IA_MODEL=gemini-flash-latest

# Configuration CORS
CORS_ORIGIN=http://localhost:3001

# Configuration SMTP pour les emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASS=votre_mot_de_passe_application
SMTP_FROM=noreply@hsabaty.ma
